<h1>My ads</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Image</th>
            <th>Title</th>
            <th>Category</th>
            <th>Price</th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
      <% @ads.each do |ad| %>
        <tr>
          <th scope="row"><%= ad.id%></th>
          <th><%= image_tag ad.picture(:thumb)%></th>
          <td><%= ad.title%></td>
          <td><%= ad.category.description %></td>
          <th><%= humanized_money_with_symbol ad.price%></th>
          <th>
            <%=link_to edit_site_profile_ad_path(ad), class: "btn btn-primary btn-sm" do%>
             <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            <%end%>
          </th>
        </tr>
      <%end%>
    </tbody>
</table>