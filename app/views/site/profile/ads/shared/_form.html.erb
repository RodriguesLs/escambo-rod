<%= render partial: "shared/errors", locals: {obj: @ad} %>
<%= form_for([:site, :profile, @ad], html: { multipart: true}) do |f| %>
  <div class="row">
    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class:"form-control"%>
      </div>
    </div>  
  </div>
  
  <div class="row">
    <div class="col-xs-4">
      <div class="form-group">
        <%= f.label :category %>
        <%= f.collection_select :category_id, Category.all, :id, :description, {}, {class:"form-control"}%>
      </div>  
    </div>
  </div> 
  
 <div class="row">
  <div class="col-xs-2">
    <div class="form-group">
      <%= f.label :price %>
      <div class="input-group">
        <div class="input-group-addon">R$</div>
        <%= f.text_field :price, class: "form-control"%>
      </div>
    </div>  
  </div>
 </div>
 
 <div class="row">
  <div class="col-xs-2">
    <div class="form-group">
      <%= f.label :finish_date %>
        <%= f.date_field :finish_date, class: "form-control"%>
    </div>  
  </div>
 </div> 
 
  <div class="row">
    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :picture %>
        <% if @ad.picture.present?%>
            <div>
              <%= image_tag @ad.picture(:medium), class: "img-thumbnail"%>
            </div><br>
        <%end%>
        <%= f.file_field :picture%>
      </div>  
    </div>
  </div> 
  
  <div class="row">
    <div class="col-xs-12">
      <div class="form-group">
        <%= f.label :description_short %>
        <%= f.text_area :description_short, class: "form-control", rows:"5" %>
      </div>  
    </div>
  </div>
  
  <div class="row">
    <div class="col-xs-12">
      <div class="form-group">
        <%= f.label :description_md %>
        <%= f.text_area :description_md, class: "form-control", rows:"10", data: {provide: 'markdown'} %>
      </div>  
    </div>
  </div>
  <%= submit_tag "Submit", class: "btn btn-primary"%>
<%end%>